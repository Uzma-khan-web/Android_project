<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#406271"
    android:scrollbars="vertical"
    android:id="@+id/Homefragment"
    android:fadingEdge="vertical"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="307dp"
            android:contentDescription="@string/imag1"
            android:src="@drawable/homepage" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/select_category1"
            android:layout_marginTop="310dp"
            android:gravity="start"
            android:layout_marginStart="30dp"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/black" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:columnCount="2"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="wrap_content"
                android:layout_height="198dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="179dp"
                        android:layout_height="155dp"
                        android:contentDescription="@string/living_room2"
                        android:src="@drawable/livingroom" />

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_room3"
                        android:layout_marginTop="0dp"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="181dp"
                        android:layout_height="158dp"
                        android:contentDescription="kitchen"
                        android:src="@drawable/kit11"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitchen"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="180dp"
                        android:layout_height="198dp"
                        android:contentDescription="Bedroom"
                        android:src="@drawable/bedroom1"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bedroom"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="178dp"
                        android:layout_height="185dp"
                        android:contentDescription="Dining Room"
                        android:src="@drawable/furni"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/txt4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Furniture"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40sp"
            android:layout_marginTop="845dp"
            android:gravity="center"
            android:text="Some Transition"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginTop="870dp"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:layout_margin="10dp"
                    android:contentDescription="Image1"
                    android:src="@drawable/bef_aft"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="Image2"
                    android:src="@drawable/before_after_4"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Image3"
                    android:src="@drawable/bef_after_5"
                    tools:ignore="HardcodedText"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginStart="30dp"
                    android:contentDescription="Image4"
                    android:src="@drawable/bef_aft_6"
                    tools:ignore="HardcodedText"/>
            </LinearLayout>

        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="375dp"
            android:layout_height="445dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1430dp"
            android:backgroundTint="#F5BD02"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="357dp"
                android:layout_height="448dp"
                android:layout_marginStart="8dp"
                android:contentDescription="Image5"
                android:src="@drawable/brochure"
                tools:ignore="HardcodedText"/>

            <TextView
                android:layout_width="356dp"
                android:layout_height="160dp"
                android:layout_marginTop="280dp"
                android:background="#09374B"
                android:gravity="start"
                android:layout_marginStart="8dp"
                android:text="    Download home interior guide"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_marginTop="311dp"
                android:gravity="start"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_marginStart="22dp"
                android:textColor="@color/black"
                android:text="Don't   forget   to   consider   these  fundamental     design    guidelines   to   know   before  you  start      interior   designing.!"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/download"
                android:gravity="center"
                android:layout_width="195dp"
                android:layout_height="48dp"
                android:layout_marginTop="395dp"
                android:layout_marginStart="110dp"
                android:text="DOWNLOAD NOW"
                android:drawableStart="@drawable/baseline_file_download_24"
                android:drawablePadding="0dp"
                android:backgroundTint="#C22727"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book for Consultation"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1900dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="435dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="1935dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="#F5BD02">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="75dp"
                android:contentDescription="liv"
                android:src="@drawable/liv12"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/bookConsultation"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="#C22727"
                android:text="Book YOUR CONSULTATION"
                android:textColor="#FFFFFF"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>
