            android:contentDescription="Img7"
            tools:ignore="HardcodedText"/>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="2200dp"
            android:src="@drawable/sofa"
            android:contentDescription="Img8"
            tools:ignore="HardcodedText"/>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="2500dp"
            android:src="@drawable/sofa3"
            android:contentDescription="Img9"
            tools:ignore="HardcodedText"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="2800dp"
            android:src="@drawable/kitchenfur"
            android:layout_marginBottom="40dp"
            android:contentDescription="Img10"
            tools:ignore="HardcodedText"/>

    </RelativeLayout>

</ScrollView>
